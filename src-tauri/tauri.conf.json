{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "WeiboDR-Uploader",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "https://picupload.weibo.com/*",
          "https://*.r2.cloudflarestorage.com/*",
          "https://weibo.com/*",
          "https://*.weibo.com/*",
          "https://dav.jianguoyun.com/*",
          "https://*.jianguoyun.com/*",
          "https://dav.yandex.com/*",
          "https://*.yandex.com/*",
          "https://webdav.*/*"
        ]
      },
      "notification": {
        "all": true
      },
      "clipboard": {
        "all": true,
        "writeText": true
      },
      "window": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.weibodr.uploader",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "m.weibo.cn",
          "windows": ["login-webview"],
          "enableTauriAPI": true
        },
        {
          "domain": "passport.weibo.cn",
          "windows": ["login-webview"],
          "enableTauriAPI": true
        },
        {
          "domain": "weibo.com",
          "windows": ["login-webview"],
          "enableTauriAPI": true
        },
        {
          "domain": "login.sina.com.cn",
          "windows": ["login-webview"],
          "enableTauriAPI": true
        }
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "WeiboDR-Uploader (微博灾备上传器)",
        "width": 800,
        "height": 600,
        "label": "main"
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    }
  }
}

